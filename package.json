{
  "name": "saga-soa",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:order": "turbo run build --dry=json | jq '.tasks[].package'",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "vitest run",
    "clean": "pnpm -r --if-present clean",
    "dep:list": "pnpm syncpack list",
    "dep:fix": "pnpm syncpack fix",
    "check": "turbo run build --no-cache --force && pnpm test",
    "generate-types": "cd packages/trpc-types && pnpm generate-types",
    "ci:check": "node scripts/local-ci-checks.js",
    "ci:check:all": "node scripts/local-ci-checks.js all",
    "ci:check:changed": "node scripts/local-ci-checks.js",
    "quick:check": "node scripts/quick-check.js"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "syncpack": "14.0.0-alpha.16",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "vitest": "^1.5.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "version": "1.0.0",
  "dependencies": {
    "@swc/helpers": "^0.5.17",
    "bunchee": "^6.5.4",
    "commander": "^14.0.0",
    "zod": "3.25.67"
  }
}