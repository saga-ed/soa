# Local service auth environment variables.
# Copy to .env and source in your backend service for local development.
#
# These values point your app at the local mock-oauth2-server instead of
# AWS Cognito, so you can develop and test auth flows without AWS access.

# OAuth2 / JWT validation settings
SERVICE_AUTH_ISSUER_URL=http://localhost:8090/service-auth
SERVICE_AUTH_JWKS_URI=http://localhost:8090/service-auth/jwks
SERVICE_AUTH_TOKEN_ENDPOINT=http://localhost:8090/service-auth/oauth2/token
SERVICE_AUTH_AUDIENCE=api

# Test client credentials (any value works with mock-oauth2-server)
SERVICE_AUTH_CLIENT_ID=example-partner
SERVICE_AUTH_CLIENT_SECRET=example-partner-secret
