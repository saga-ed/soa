  "devDependencies": {
    "@saga-ed/soa-typescript-config": "workspace:*",
    "@types/node": "latest",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^1.5.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hipponot/saga-soa.git",
    "directory": "packages/pubsub-server"
